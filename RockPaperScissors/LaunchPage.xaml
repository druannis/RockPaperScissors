<Page x:Class="RockPaperScissors.LaunchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RockPaperScissors"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="LaunchPage">
    <Page.Background>
        <ImageBrush/>
    </Page.Background>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/rpsbg.jpg"/>
        </Grid.Background>
        <TextBox TextWrapping="Wrap" Text="Welcome to Rock Paper Scissors" Margin="32,37,41,226" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.5,0.5" FontSize="35" FontFamily="Comic Sans MS" Background="#FFF9931F" BorderBrush="Black">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.017"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Continue" Margin="66,279,65,111" Click="TakeToSelection" BorderBrush="Black" Background="#FFF3BB7C"/>

    </Grid>
</Page>
