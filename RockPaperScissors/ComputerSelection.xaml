<Page x:Class="RockPaperScissors.ComputerSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RockPaperScissors"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="300"
      Title="ComputerSelection">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/rpsbg.jpg"/>
        </Grid.Background>
        <TextBlock TextWrapping="Wrap" Text="The Computer Has Made Its Choice! Select Continue to see who won" Margin="50,10,49,259" FontSize="25" FontFamily="Comic Sans MS" Background="#FFF8931F" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.374"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.899"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Content="Continue" Margin="66,279,65,111" Click="TakeToFinals" Background="#FFF3BB7C"/>

    </Grid>
</Page>
